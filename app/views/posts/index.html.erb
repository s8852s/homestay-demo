<h1>訪客留言</h1>

<%= link_to "發表留言", new_post_path %>

<table>
  <thead>
    <tr>
      <td>留言主題</td>
      <td>留言者</td>
      <td>留言日期</td>
      <td>回應日期</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= post.nickname %></td>
      <td><%= post.created_at %></td>
      <td>回應日期</td>
      <td><%= link_to "編輯留言", edit_post_path(post) %></td>
      <td><%= link_to "刪除留言", post_path(post), method: "delete", data: { confirm: "確定要刪除留言?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>